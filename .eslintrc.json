{
    "extends": "standard",
    "plugins": [
        "standard",
        "promise"
    ],
    "rules": {
      "space-before-function-paren": 0,
      "comma-dangle": ["error", "always-multiline"],
      "semi": ["error", "never"],
      "space-infix-ops": ["error", {
        "int32Hint": false
      }],
      "padded-blocks": ["error", {
        "classes": "always"
      }],
      "space-before-blocks": ["error", "always"]
    }
}
